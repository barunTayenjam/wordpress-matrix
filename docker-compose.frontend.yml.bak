version: '3.8'

services:
  # WordPress Development Platform Frontend
  matrix-frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: matrix_frontend
    restart: unless-stopped
    ports:
      - "3000:3000"
    environment:
      - PORT=3000
      - NODE_ENV=development
    volumes:
      - ./frontend:/app
      - /app/node_modules
      - ./matrix:/matrix:ro  # Mount matrix script as read-only
    working_dir: /app
    command: npm run dev
    networks:
      - wp-net

networks:
  wp-net:
    external: true  # Use the existing network from main platform