<?xml version="1.0"?>
<ruleset name="Ultimate WordPress Development Standards">
    <description>Comprehensive WordPress coding standards for ultimate development environment</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress-Core" />
    <rule ref="WordPress-Docs" />
    <rule ref="WordPress-Extra" />
    <rule ref="WordPress-VIP-Go" />
    
    <!-- Include PSR standards -->
    <rule ref="PSR1" />
    <rule ref="PSR12" />
    
    <!-- Include security standards -->
    <rule ref="WordPress.Security" />
    <rule ref="WordPress.WP.I18n" />
    <rule ref="WordPress.WP.Capabilities" />

    <!-- Check all PHP files -->
    <arg name="extensions" value="php" />

    <!-- Show progress, use colors, and show sniff codes -->
    <arg value="spvs" />
    <arg name="colors" />
    <arg name="parallel" value="8" />

    <!-- Paths to check -->
    <file>/data/wordpress1/wp-content/themes</file>
    <file>/data/wordpress1/wp-content/plugins</file>
    <file>/data/wordpress2/wp-content/themes</file>
    <file>/data/wordpress2/wp-content/plugins</file>

    <!-- Exclude patterns -->
    <exclude-pattern>/data/*/wp-content/themes/twentytwenty*</exclude-pattern>
    <exclude-pattern>/data/*/wp-content/plugins/akismet</exclude-pattern>
    <exclude-pattern>/data/*/wp-content/plugins/hello.php</exclude-pattern>
    <exclude-pattern>/data/*/wp-content/cache</exclude-pattern>
    <exclude-pattern>/data/*/wp-content/uploads</exclude-pattern>
    <exclude-pattern>/data/*/wp-content/upgrade</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/test/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>

    <!-- Configuration -->
    <config name="minimum_supported_wp_version" value="6.0" />
    <config name="testVersion" value="8.1-" />

    <!-- Custom rules for enhanced quality -->
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter" />
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod" />
    <rule ref="Generic.Commenting.Todo" />
    <rule ref="Generic.Commenting.Fixme" />
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120" />
            <property name="absoluteLineLimit" value="150" />
        </properties>
    </rule>

    <!-- WordPress-specific enhancements -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="default" />
                <element value="your-theme-textdomain" />
                <element value="your-plugin-textdomain" />
            </property>
        </properties>
    </rule>

    <!-- Performance rules -->
    <rule ref="WordPress.DB.DirectDatabaseQuery" />
    <rule ref="WordPress.DB.SlowDBQuery" />
    <rule ref="WordPress.WP.DiscouragedFunctions" />

    <!-- Security enhancements -->
    <rule ref="WordPress.Security.EscapeOutput" />
    <rule ref="WordPress.Security.NonceVerification" />
    <rule ref="WordPress.Security.ValidatedSanitizedInput" />

</ruleset>